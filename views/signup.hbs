{{> welcomemenu id="signup"}}

<section class="ui raised segment">
    <div class="ui two column grid basic middle aligned segment">
        <div class="column">
            <form class="ui raised segment form" action="/register" method="POST">
                <h2 class="ui center aligned header">Register</h2>

                <div class="two fields">
                    <div class="field">
                        <label>Name</label>
                        <input placeholder="Name" type="text" name="name">
                    </div>
                    <div class="field">
                        <label>Gender</label>
                        <select class="ui dropdown" name="gender">
                            <option value="">Select</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                        </select>
                    </div>
                </div>

                <div class="field">
                    <label>Select</label>
                    <section class="ui center aligned segment">
                        <div class="ui form">
                            <div class="inline fields">
                                <div class="ui checkbox">
                                    <input type="checkbox" name="member">
                                    <label>Member&emsp;</label>
                                </div>
                                <div class="ui checkbox">
                                    <input type="checkbox" name="trainer">
                                    <label>Trainer</label>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

                <div class="field">
                    <label>Email</label>
                    <input placeholder="Email" type="text" name="email">
                </div>

                <div class="field">
                    <label>Password</label>
                    <input placeholder="Password" type="password" name="password">
                </div>

                <div class="field">
                    <label>Address</label>
                    <input placeholder="Address" type="text" name="address">
                </div>

                <div class="field">
                    <label>Height</label>
                    <input placeholder="Height" type="text" name="height">
                </div>

                <div class="field">
                    <label>StartingWeight</label>
                    <input placeholder="Starting Weight" type="text" name="startingWeight">
                </div>
                <button class="ui blue submit button">Submit</button>
            </form>
        </div>
        <div class="column">
        </div>
    </div>

</section>

