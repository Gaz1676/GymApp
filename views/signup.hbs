{{> welcomeMenu id="signup"}}

<section class = "ui inverted yellow segment">
<section class = "ui segment">
<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <!--<img class="ui image" src="../../public/images/Sign_Up.png">-->
    </div>
    
    <div class="column">
        <form class="ui raised segment form" name="signup" action="/register" method="POST">
            <h1 class="ui red center aligned header"> Register </h1>

            <div class="two fields">
                <div class="required field">
                    <label> First Name </label>
                    <input placeholder="first Name" type="text" name="firstName" required>
                </div>

                <div class="required field">
                    <label> Last Name </label>
                    <input placeholder="last Name" type="text" name="lastName" required>
                </div>
            </div>

            <div class="required field">
                <label> Email </label>
                <input placeholder="email" type="email"  name="email" required>
            </div>

            <div class="required field">
                <label> Password </label>
                <input placeholder="password" type="password" name="password" required>
            </div>
            
            <div class="required field">
                <label> Address </label>
                <input placeholder="address" type="text" name="address" required>
            </div>
          
            <div class="field">
                <label> Gender </label>
                <select class="ui dropdown" name="gender">
                    <option value=""> Unspecified </option>
                    <option value="male"> Male</option>
                    <option value="female"> Female</option>
                </select>
            </div>

            <div class="two fields">
                <div class="required field">
                    <label> Height </label>
                    <input placeholder="height (in metres)..." type="number" step=".01" min="1" max="3" name="height" required>
                </div>
                <div class="required field">
                    <label> Starting Weight </label>
                    <input placeholder="starting weight (in kgs)..." type="number" step=".01" min="35" max="250" name="startingWeight" required>
                </div>
            </div>

            <button class="ui blue submit button"> Submit </button>
            
        </form>
    </div>
</div>
</section>
</section>       