<div class="ui center aligned three column grid">
    <div class="column">
        <div class="ui raised card">
            <div class="ui small centered image" data-tooltip="Hit my goal today... MAANN I look Goooooooddd!!!">

                <img class="ui image" src="http://res.cloudinary.com/cloud101/image/upload/v1504294118/Jay_hx8ztf.png">

            </div>
        </div>
    </div>

    <div class="column">
        <div class="ui raised card">
            <div class="ui small centered image" data-tooltip="Who's ready set a future goal with me???">

                <img class="ui small image" src="{{trainer.img}}">
            </div>
        </div>
    </div>

    <div class="column">
        <div class="ui raised card">
            <div class="ui small centered image" data-tooltip="DOHHHH... I forgot about my goal and just ate one teeny tiny Doughnut I swear!!!">

                <img class="ui image" src="http://res.cloudinary.com/cloud101/image/upload/v1505155290/doh_nrn2eb.png">

            </div>
        </div>
    </div>
</div>

<section class="ui inverted brown center aligned segment">
    <section class="ui large inverted yellow segment">
        <div class="ui accordion">
            <div class="title">
                Click Arrow to add more Goals
                <i class="dropdown icon"></i>
            </div>
            <div class="content">
                <form class="ui raised center aligned segment form" name="memberAddAssessment" action="/trainerDashboard/traineraddgoal" method="POST">
                    <div class="four fields">
                        <div class="three field wide">
                            <label>Member </label>
                            <select class="ui dropdown" name="memberid" required>
                                <option value="">Select Member</option>
                                {{#each members}}
                                    <option value="{{memberid}}">{{firstName}} {{lastName}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <div class="field">
                            <label>Set Target Date</label>
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input placeholder="date" type="date" name="date" required>
                            </div>
                        </div>

                        <div class="three field wide">
                            <label> Select Target Area </label>
                            <select class="ui dropdown " name="area" title="area">
                                <option value=""> Select</option>
                                <option value="Weight"> Weight</option>
                                <option value="Chest"> Chest</option>
                                <option value="Thigh"> Thigh</option>
                                <option value="Upper Arm"> Upper Arm</option>
                                <option value="Waist"> Waist</option>
                                <option value="Hips"> Hips</option>
                            </select>
                        </div>

                        <div class="field">
                            <label>Target Goal</label>
                            <div class="ui input left icon">
                                <i class="inverted red bullseye icon"></i>
                                <input placeholder="set goal" type="number" name="goal" required>
                            </div>
                        </div>

                        <div class="field">
                            <label>Description</label>
                            <label>
                                <textarea name="description" rows="2" cols="50"></textarea>
                            </label>
                        </div>
                    </div>
                    <button class="ui animated fade blue submit button">
                        <div class="visible content"><i class="add circle icon"></i> Add Goal</div>
                        <div class="hidden content">Click to Save</div>
                    </button>
                </form>
            </div>
        </div>
    </section>
    <table class="ui fixed yellow center aligned celled table">
        <thead>
        <tr>
            <th>Member</th>
            <th>Target Date</th>
            <th>Target Area</th>
            <th>Target Goal</th>
            <th>Description</th>
            <th>Status</th>
            <th>Edit Goal</th>
            <th>Remove</th>
        </tr>
        </thead>

        <tbody>
        {{#each goals}}
            <div class="ui list">
                <tr>
                    <td>{{memberfirstname}} {{memberlastname}}</td>
                    <td>{{date}}</td>
                    <td>{{area}}</td>
                    <td>{{goal}}</td>
                    <td>{{description}}</td>
                    <td>{{status}}</td>
                    <td>
                        <a href="/trainerDashboard/{{trainerid}}/trainerupdategoal/{{goalid}}">
                            <i class="large teal upload icon"></i>
                        </a>
                    </td>
                    <td>
                        <a href="/trainerDashboard/removegoal/{{goalid}}">
                            <i class=" large red trash icon"></i>
                        </a>
                    </td>
                </tr>
            </div>
        {{/each}}
        </tbody>
    </table>
</section>

<script>
    // for dropdown feature
    $('.ui .accordion')
            .accordion({
                selector: {
                    trigger: '.title .icon'
                }
            })
    ;

    // sets calendar from todays date
    const todaysDate = new Date().toISOString().split('T')[0];
    document.getElementsByName("date")[0].setAttribute('min', todaysDate);
</script>