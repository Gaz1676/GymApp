<div class="ui yellow three stackable cards">
    {{#each classList}}
        <div class="card">
            <div class="content">
                <div class="center aligned content">
                    <img class="ui middle aligned small image" {{#if image}} src="{{image}}" {{else}} src="http://s3.amazonaws.com/wpd-assets/ymcanewyork/uploads/sub-class-thumbs/family-yoga-pilates-icon.png" {{/if}}>
                </div>
                <div class="ui blue header">{{name}}</div>
                <section class="ui segment">
                    <div>{{description}}</div>
                </section>

                <div class="column left aligned">
                    <section class="ui yellow segment">
                        <table class="ui fixed left aligned table">
                            <td>Duration:</td>
                            <td>{{duration}}</td>
                            </tr>
                            <tr>
                                <td>Capacity:</td>
                                <td>{{capacity}}</td>
                            </tr>
                            <tr>
                                <td>Difficulty:</td>
                                <td>{{difficulty}}</td>
                            </tr>
                            <tr>
                                <td>Workouts:</td>
                                <td>{{classesWorkouts}}</td>
                            </tr>
                            <tr>
                                <td>Date:</td>
                                <td>{{date}}</td>
                            </tr>
                            <tr>
                                <td>Time:</td>
                                <td>{{time}}</td>
                            </tr>
                        </table>
                    </section>
                </div>
            </div>

            <div class="extra content">
                <span>
                    Enrol <a href="/dashboard/enrollmember/{{memberid}}/intoclass/{{classid}}" class="ui icon button">
                            <i class="green add user icon"></i>
                        </a>&emsp;&emsp;&emsp;
                     <a href="/dashboard/unenroll/{{memberid}}/fromclass/{{classid}}" class="ui icon button">
                            <i class="red remove user icon"></i>
                        </a>Un-Enrol
                </span>
            </div>
            <div class="extra content">
                <span>
                </span>
            </div>
        </div>

    {{/each}}
</div>
