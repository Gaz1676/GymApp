<div class="ui two column grid basic segment">
    <div class="column left aligned">
        <section class="ui inverted brown segment">
            <section class="ui yellow raised segment">
                <img class="ui centered image" src="http://res.cloudinary.com/cloud101/image/upload/v1502984938/yogahomer_lwmkhu.jpg">
            </section>
        </section>
    </div>
    <div class="column">
        <section class="ui inverted brown segment">
            <form class="ui yellow raised segment form" action="/trainerDashboard/addclass" method="POST">
                <h2 class="ui red center aligned header"> Create A New Gym Class</h2>
                <section class="ui segment">
                    <div class="field">
                        <label>Class Name</label>
                        <div class="ui input left icon">
                            <i class="university icon"></i>
                            <input placeholder="class name" name="name" required>
                        </div>
                    </div>

                    <div class="two fields">
                        <div class="field">
                            <label> Difficulty </label>
                            <select class="ui dropdown" name="difficulty" required>
                                <option value="">Select Level</option>
                                <option value="All Levels">All Levels</option>
                                <option value="Beginners Level"> Beginners Level</option>
                                <option value="Intermediate Level"> Intermediate Level</option>
                                <option value="Advanced Level"> Advanced Level</option>
                            </select>
                        </div>
                        <div class="field">
                            <label>Capacity</label>
                            <div class="ui input left icon">
                                <i class="users icon"></i>
                                <input placeholder="capacity" type="number" name="capacity" step="1"
                                       min="5"
                                       max="30" required>
                            </div>
                        </div>
                    </div>

                    <div class="two fields">
                        <div class="field">
                            <label>No. of Workouts</label>
                            <div class="ui input left icon">
                                <i class="ordered list icon"></i>
                                <input placeholder="workouts" type="number" step="1" min="1" max="12" name="noOfWorkouts" required>
                            </div>
                        </div>
                        <div class="field">
                            <label>Duration</label>
                            <div class="ui input left icon">
                                <i class="hourglass half icon"></i>
                                <input placeholder="time" type="number" name="duration" step="5" min="5" max="60" required>
                            </div>
                        </div>
                    </div>

                    <div class="two fields">
                        <div class="field">
                            <label>Start Time</label>
                            <div class="ui input left icon">
                                <i class="time icon"></i>
                                <input placeholder="time" type="time" name="time" step="1800" min="06:00" max="18:00" required>
                            </div>
                        </div>
                        <div class="field">
                            <label>Start Date</label>
                            <div class="ui input left icon">
                                <i class="calendar icon"></i>
                                <input placeholder="date" type="date" name="date" required>
                            </div>
                        </div>
                    </div>

                    <button class="ui animated fade blue submit button">
                        <div class="visible content"><i class="add circle icon"></i>Create Class</div>
                        <div class="hidden content">Click to Save</div>
                    </button>
                </section>
            </form>
        </section>
    </div>
</div>

<script>
    // sets calendar from todays date
    const todaysDate = new Date().toISOString().split('T')[0];
    document.getElementsByName("date")[0].setAttribute('min', todaysDate);
</script>