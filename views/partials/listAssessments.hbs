<section class="ui inverted brown center aligned segment">
    <table class="ui fixed yellow center aligned table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Trend</th>
            <th>Comment</th>
            <th>Delete</th>
        </tr>
        </thead>

        <tbody>
        {{#each member.assessments}}
            <div class="ui list">
                <tr>
                    <td>{{date}}</td>
                    <td>{{weight}}</td>
                    <td>{{chest}}</td>
                    <td>{{thigh}}</td>
                    <td>{{upperArm}}</td>
                    <td>{{waist}}</td>
                    <td>{{hips}}</td>
                    <td><i class="large {{trend}} bullseye icon"></i></td>
                    <td>{{comment}}</td>
                    <td>
                        <a href="/dashboard/removeassessment/{{assessmentid}}">
                            <i class=" large red trash icon"></i>
                        </a>
                    </td>
                </tr>
            </div>
        {{/each}}
        </tbody>
    </table>
</section>