
<section class="ui inverted brown center aligned segment">
    {{#each member.assessments}}
        <table class="ui fixed yellow center aligned table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Weight</th>
                <th>Chest</th>
                <th>Thigh</th>
                <th>Upper Arm</th>
                <th>Waist</th>
                <th>Hips</th>
                <th>Trend</th>
                <th>Comment</th>
                <th>Delete</th>
            </tr>
            </thead>

            <tbody>
            <div class="ui list">
                <tr>
                    <td>{{date}}</td>
                    <td>{{weight}}</td>
                    <td>{{chest}}</td>
                    <td>{{thigh}}</td>
                    <td>{{upperArm}}</td>
                    <td>{{waist}}</td>
                    <td>{{hips}}</td>
                    <td><i class="large {{trend}} bullseye icon"></i></td>
                    <td>{{comment}}</td>

                    {{#unless updateComment}}
                        <td>
                            <a href="/dashboard/removeassessment/{{assessmentid}}">
                                <i class=" large red trash icon"></i>
                            </a>
                        </td>
                    {{/unless}}
                    {{#if updateComment}}
                        <td>
                            <a href="/trainerDashboard/{{../id}}/removeassessment/{{assessmentid}}">
                                <i class=" large red trash icon"></i>
                            </a>
                        </td>
                    {{/if}}
                </tr>
            </div>
            </tbody>
        </table>

        {{#if updateComment}}
            <section class="ui center aligned section">
                <h4> Comment </h4>
                <form class="ui section form" action="/assessment/{{../memberid}}/updatecomment/{{assessmentid}}"
                      method="POST">
                    <div>
                        <input placeholder="Insert comment..." name="comment" required>
                    </div>
                    <div>
                        <br>

                        <button class="ui animated fade blue submit button">
                            <div class="visible content"><i class="write icon"></i>Update Comment</div>
                            <div class="hidden content">Click to Save</div>
                        </button>
                    </div>
                </form>
            </section>
        {{/if}}
    {{/each}}
</section>