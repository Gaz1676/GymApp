<section class="ui inverted brown segment">
    <table class="ui fixed yellow center aligned table">
        <thead>
        <tr>
            <th> Date </th>
            <th> Weight </th>
            <th> Chest </th>
            <th> Thigh </th>
            <th> Upper Arm </th>
            <th> Waist </th>
            <th> Hips </th>
            <th> Trend </th>
            <th> Comment</th>
            <th> Delete </th>
        </tr>
        </thead>
        {{#each member.assessments}}
            <tbody>
            <div class="ui bulleted list">
                <tr>
                    <td>{{date}}</td>
                    <td>{{weight}}</td>
                    <td>{{chest}}</td>
                    <td>{{thigh}}</td>
                    <td>{{upperArm}}</td>
                    <td>{{waist}}</td>
                    <td>{{hips}}</td>
                    <td><i class="large {{trend}} arrow circle left icon"></i></td>
                    <td>{{comment}}</td>
                    {{#unless updateComment}}
                        <td>
                            <a href="/dashboard/removeassessment/{{assessmentId}}">
                                <i class=" large red trash icon"></i>
                            </a>
                        </td>
                    {{/unless}}
                    {{#if updateComment}}
                        <td>
                            <a href="/trainerDashboard/{{../id}}/removeassessment/{{assessmentId}}">
                                <i class=" large red trash icon"></i>
                            </a>
                        </td>
                    {{/if}}
                </tr>
            </div>
            </tbody>
        {{/each}}
    </table>
</section>

