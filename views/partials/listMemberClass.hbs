<form class="ui fluid search basic segment form" action="/dashboard/searchforclass/{{classid}}" method="POST">
    <div class="ui right icon input field">
        <i class="search icon"></i>
        <input class="prompt" placeholder="Class Name" name="search">
    </div>
    <div class="results"></div>
</form>

<script>
    let list = [
        {{#each classList}}
            {title: '{{name}}'},
        {{/each}}
    ];
    $('.ui.search')
            .search({
                source: list
            })
    ;
</script>

<div class="ui five cards">
    {{#each classList}}
        <div class="card">
            <div class="blurring dimmable image">
                <div class="ui dimmer">
                    <div class="content">
                        <div class="center">
                            <h5 class="ui inverted header">{{description}}</h5>
                            <a href="/dashboard/viewclass/{{classid}}" class="ui icon button">Check Availability</a>
                        </div>
                    </div>
                </div>
                <div class="ui blue header">
                    {{name}}
                </div>
                <img {{#if image}} src="{{image}}" {{else}}  src="http://res.cloudinary.com/cloud101/image/upload/v1503230448/imageedit_3_2129305932_eekvt6.png" {{/if}}>

            </div>
        </div>
    {{/each}}
</div>


<script>
    $('.five.cards .image').dimmer({
        on: 'hover'
    });
</script>