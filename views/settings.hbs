{{> memberMenu id="settings"}}

<div class="ui two column grid basic segment">
    <div class="column">
        <section class="ui inverted brown segment">
            <section class="ui yellow segment">
                <table class="ui fixed left aligned table">
                    <h2 class="ui red center aligned header"> {{member.firstName}}'s Profile Details </h2>
                    <img class="ui small centered yellow image" {{#if member.img}} src="{{member.img}}" {{else}}

                         src="http://res.cloudinary.com/cloud101/image/upload/v1503162221/forgotimage_lomybo.png" {{/if}}>

                    <tr>
                        <td><i class="user icon"></i> Member:</td>
                        <td>{{member.firstName}} {{member.lastName}}</td>
                    </tr>
                    <tr>
                        <td><i class="mail icon"></i> Email:</td>
                        <td>{{member.email}}</td>
                    </tr>
                    <tr>
                        <td><i class="home icon"></i> Address:</td>
                        <td>{{member.address}}</td>
                    </tr>
                    <tr>
                        <td><i class="genderless icon"></i> Gender:</td>
                        <td>{{member.gender}}</td>
                    </tr>
                    <tr>
                        <td><i class="resize vertical icon"></i> Height:</td>
                        <td>{{member.height}} meters</td>
                    </tr>
                    <tr>
                        <td><i class="law icon"></i> Starting weight:</td>
                        <td>{{member.startingWeight}} kgs</td>
                    </tr>

                </table>
            </section>
        </section>
    </div>

    <div class="ui center aligned column">
        <section class="ui inverted brown segment">
            <div class="ui yellow button">Click to Update First & Last Name</div>
            <div class="ui flowing popup transition hidden">
                <div class="ui four column divided grid">
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updatefirstname" method="POST">
                            <input placeholder="first name" name="firstName" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updatelastname" method="POST">
                            <input placeholder="last name" name="lastName" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="ui inverted brown segment">
            <div class="ui yellow button">Click to Update Email & Password</div>
            <div class="ui flowing popup transition hidden">
                <div class="ui four column divided grid">
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updateemail" method="POST">
                            <input placeholder="email" name="email" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updatepassword" method="POST">
                            <input placeholder="password" name="password" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="ui inverted brown segment">
            <div class="ui yellow button">Click to Update Address & Gender</div>
            <div class="ui flowing popup transition hidden">
                <div class="ui two column divided grid">
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updateaddress" method="POST">
                            <input placeholder="address" name="address" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updategender" method="POST">
                            <select class="ui dropdown " name="gender" title="">
                                <option value=""> Select</option>
                                <option value="Male"> Male</option>
                                <option value="Female"> Female</option>
                            </select>
                            <br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="ui inverted brown segment">
            <div class="ui yellow button">Click to Update Height & Weight</div>
            <div class="ui flowing popup transition hidden">
                <div class="ui two column divided grid">
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updateheight" method="POST">
                            <input placeholder="(meters)" name="height" type="number" step=".1" min="1" max="3" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                    <div class="eight wide column">
                        <form class="ui yellow raised segment form" action="/settings/updatestartingweight" method="POST">
                            <input placeholder="(kgs)" name="startingWeight" type="number" step=".1" min="35" max="250" required>
                            <br><br>
                            <button class="ui animated fade blue submit button">
                                <div class="visible content"><i class="upload icon"></i>Update</div>
                                <div class="hidden content">Click to Save</div>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <section class="ui inverted brown segment">
            <div class="ui yellow button">Click to Update Profile Picture</div>
            <div class="ui flowing popup transition hidden">
                <form class="ui yellow center aligned raised segment form" action="/settings/updateprofilepicture" method="post" enctype="multipart/form-data">
                    <input type="file" name="picture" required>
                    <br><br>
                    <button class="ui animated fade blue submit button">
                        <div class="visible content"><i class="upload icon"></i>Update Profile Picture</div>
                        <div class="hidden content">Click to Save</div>
                    </button>
                </form>
            </div>
        </section>
    </div>
</div>

<script>
    // Makes the ui buttons jiggle when screen activated. Also produces a pop up to edits when clicked
    $('.yellow.button')
            .popup({
                popup: $('.custom.popup'),
                on: 'click'
            })
            .transition({
                animation : 'jiggle',
                duration  : 600,
                interval  : 20
            })
    ;
</script>
