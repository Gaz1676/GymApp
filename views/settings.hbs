{{> memberMenu id="settings"}}

<section class="ui inverted yellow segment">
    <section class="ui inverted brown segment">
        <div class="ui two column grid basic segment">
            <div class="column">
                <form class="ui yellow raised segment form" action="/settings" method="POST">
                    <h2 class="ui red center aligned header"> Update Profile</h2>
                    <section class="ui inverted grey segment">
                        <div class="two fields">
                            <div class="field">
                                <label> First Name </label>
                                <input placeholder="first name" name="firstName" required>
                            </div>
                            <div class="field">
                                <label> Last Name </label>
                                <input placeholder="last name"  name="lastName" required>
                            </div>
                        </div>
                        <div class="field">
                            <label>Email</label>
                            <input placeholder="email" type="email" name="email" required>
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <input type="password" name="password" required>
                        </div>
                        <div class="field">
                            <label>Address</label>
                            <input  placeholder="address" name="address" required>
                        </div>
                        <div class="field">
                            <label> Gender </label>
                            <select class="ui dropdown" name="gender">
                                <option value=""> Select </option>
                                <option value="male"> Male </option>
                                <option value="female"> Female </option>
                            </select>
                        </div>
                        <div class="two fields">
                            <div class="field">
                                <label> Height </label>
                                <input placeholder="height (in meters)" type="number" step=".01" min="1" max="3" name="height" required>
                            </div>
                            <div class="field">
                                <label> Starting Weight </label>
                                <input placeholder="starting weight (in kgs)" type="number" step=".01" min="35" max="250" name="startingWeight" required>
                            </div>
                        </div>
                        <button class="ui animated fade blue submit button">
                            <div class="visible content"><i class="upload icon"></i>Update</div>
                            <div class="hidden content">Click to Save</div>
                        </button>
                    </section>
                </form>
            </div>
            <div class="column left aligned">

                <section class="ui yellow segment">
                    <table class="ui inverted grey fixed left aligned table">
                        <h2 class="ui red center aligned header"> Member Details </h2>
                        <tr>
                            <td><i class="large inverted blue user icon"></i>Member:</td>
                            <td>{{member.firstName}} {{member.lastName}}</td>
                        </tr>
                        <tr>
                            <td><i class="large inverted red mail icon"></i>Email:</td>
                            <td>{{member.email}}</td>
                        </tr>
                        <tr>
                            <td><i class="large inverted green home icon"></i>Address:</td>
                            <td>{{member.address}}</td>
                        </tr>
                        <tr>
                            <td><i class="large inverted purple genderless icon"></i>Gender:</td>
                            <td>{{member.gender}}</td>
                        </tr>
                        <tr>
                            <td><i class="large resize vertical icon"></i>Height:</td>
                            <td>{{member.height}} meters </td>
                        </tr>
                        <tr>
                            <td><i class="large inverted yellow law icon"></i>Starting weight:</td>
                            <td>{{member.startingWeight}} kgs </td>
                        </tr>
                    </table>
                </section>
            </div>
        </div>
    </section>
</section>