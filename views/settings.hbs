{{> memberMenu id="settings"}}

<section class="ui inverted yellow segment">
    <section class="ui inverted brown segment">
        <div class="ui two column grid basic segment">
            <div class="column">
                <form class="ui yellow raised segment form" action="/settings" method="POST">
                    <h2 class="ui red center aligned header"> Update Profile</h2>
                    <section class="ui inverted grey segment">
                        <div class="two fields">
                            <div class="field">
                                <label> First Name </label>
                                <input placeholder="{{member.firstName}}" name="firstName" required>
                            </div>
                            <div class="field">
                                <label> Last Name </label>
                                <input placeholder="{{member.lastName}}"  name="lastName" required>
                            </div>
                        </div>
                        <div class="field">
                            <label>Email</label>
                            <input placeholder="{{member.email}}" type="email" name="email" required>
                        </div>
                        <div class="field">
                            <label>Password</label>
                            <input type="password" name="password" required>
                        </div>
                        <div class="field">
                            <label>Address</label>
                            <input  placeholder="{{member.address}}" name="address" required>
                        </div>
                        <div class="field">
                            <label> Gender </label>
                            <select class="ui dropdown" name="gender">
                                <option value=""> Select </option>
                                <option value="male"> Male </option>
                                <option value="female"> Female </option>
                            </select>
                        </div>
                        <div class="two fields">
                            <div class="field">
                                <label> Height </label>
                                <input placeholder="{{member.height}} meters" type="number" step=".01" min="1" max="3" name="height" required>
                            </div>
                            <div class="field">
                                <label> Starting Weight </label>
                                <input placeholder="{{member.startingWeight}} kgs" type="number" step=".01" min="35" max="250" name="startingWeight" required>
                            </div>
                        </div>
                        <button class="ui blue submit button"> Update </button>
                    </section>
                </form>
            </div>
            <div class="column left aligned">

                <section class="ui yellow segment">
                    <table class="ui inverted grey fixed left aligned table">
                        <h2 class="ui red center aligned header"> Member Details </h2>
                        <tr>
                            <td>First Name:</td>
                            <td>{{member.firstName}}</td>
                        </tr>
                        <tr>
                            <td>Last Name:</td>
                            <td>{{member.lastName}}</td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>{{member.email}}</td>
                        </tr>
                        <tr>
                            <td>Address:</td>
                            <td>{{member.address}}</td>
                        </tr>
                        <tr>
                            <td>Gender:</td>
                            <td>{{member.gender}}</td>
                        </tr>
                        <tr>
                            <td>Height:</td>
                            <td>{{member.height}} meters </td>
                        </tr>
                        <tr>
                            <td>Starting Weight:</td>
                            <td>{{member.startingWeight}} kgs </td>
                        </tr>
                    </table>
                </section>
            </div>
        </div>
    </section>
</section>